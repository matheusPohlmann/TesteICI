@model IEnumerable<ProjetoTesteICI.Models.Tag>
@{ ViewData["Title"] = "Tags"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-dark">Tags</h1>
    <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> Nova Tag
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle rounded shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Descrição</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@item.Descricao">
                        @item.Descricao
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

