@model ProjetoTesteICI.Models.Tag

<form asp-controller="Tag" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group mb-4">
        <label asp-for="Descricao" class="control-label"></label>
        <input asp-for="Descricao" class="form-control" placeholder="Ex: Tecnologia, Futebol, Economia" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group d-flex justify-content-between">
        <button type="submit" class="btn btn-primary btn-lg">Criar Tag</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Voltar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
