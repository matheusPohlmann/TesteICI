@model ProjetoTesteICI.Models.Noticia
@{ ViewData["Title"] = "Excluir Notícia"; }

<h1>Excluir</h1>
<h3>Você tem certeza que quer excluir esta notícia?</h3>
<div>
    <h4>Notícia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Titulo)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Titulo)</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Texto)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Texto)</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Usuario)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Usuario.Nome)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>