@using Microsoft.EntityFrameworkCore.Query
@model IEnumerable<ProjetoTesteICI.Models.Noticia>

@{
    ViewData["Title"] = "Notícias";
    
    var modalModel = new ProjetoTesteICI.ViewModels.NoticiaModalViewModel();

}
@Html.AntiForgeryToken()

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Central de Notícias</h1>
    </div>

    @if (Model != null && Model.Any())
    {
        Console.Write("AQUI: "+Model);
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" id="noticiasContainer">
            @foreach (var noticia in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@noticia.Titulo</h5>
                            <p class="card-text flex-grow-1 text-muted">
                                @(noticia.Texto.Length > 150 ? noticia.Texto.Substring(0, 150) + "..." : noticia.Texto)
                            </p>
                        </div>
                        <div class="card-footer bg-light border-top-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-info">
                                    <i class="fas fa-user"></i> Autor: <strong>@noticia.Usuario?.Nome</strong><br />
                                </small>
                                <div class="btn-group">

                                </div>
                            </div>
                            
                            <div class="mt-2">
                                <i class="fas fa-tags me-1"></i>
                                @if (noticia.NoticiaTags != null)
                                {
                                    @foreach (var nt in noticia.NoticiaTags)
                                    {
                                        <span class="badge bg-secondary me-1">@nt.Tag?.Descricao</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-danger">Nenhuma Tag</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center shadow-sm" role="alert">
            <i class="fas fa-info-circle fa-2x mb-2"></i>
            <p class="mb-0"><strong>Nenhuma notícia encontrada.</strong> Clique em "Nova Notícia" para começar.</p>
        </div>
    }
</div>

@await Html.PartialAsync("_NoticiaModal", modalModel)

@section Scripts {
    <script>
        
        function openEditModal(id) {
             $.get(`/Noticia/GetModal/${id}`, function(data) {
                 $('#noticiaModalContent').html(data);
                 $('#noticiaModal').modal('show');
             });
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}